@using MudBlazorApp.Pages.ViewModels
<MudDialog>
    <TitleContent>
         <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                    @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            @if (IsEditMode)
            {
            <MudItem xs="12" md="6" Visible=>
                <MudTextField Disabled For="@(() => BrandModel.Id)" @bind-Value="BrandModel.Id" Label="Id" />
            </MudItem>
            }
            <MudItem xs="12" md="6">
                <MudTextField T="string" For="@(() => BrandModel.Name)" @bind-Value="BrandModel.Name" Label="Name" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField For="@(() => BrandModel.Description)" @bind-Value="BrandModel.Description" Label="Description" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField For="@(() => BrandModel.Tax)" @bind-Value="BrandModel.Tax" Label="Tax" />
            </MudItem>
        </MudGrid>
        <MudForm  Model="@BrandModel" >
                <MudTextField @bind-Value="@BrandModel.Name"
                              For="@(()=>BrandModel.Name)"
                              Label="이름" />

                <MudTextField @bind-Value="@BrandModel.Description"
                              For="@(()=>BrandModel.Description)"
                              Label="이메일" />

                <MudTextField @bind-Value="@BrandModel.Tax"
                              For="@(()=>BrandModel.Tax)"
                              Label="비밀번호"
                              InputType="InputType.Password" />

            
            </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton DisableElevation Variant="Variant.Filled" OnClick="@Cancel">Cancel</MudButton>
        <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary">@SaveBtnText</MudButton>
    </DialogActions>
</MudDialog>


@code {

    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }
    bool IsEditMode = false;
    string Title => IsEditMode ? "수정" : "추가";
    string SaveBtnText =>IsEditMode ? "수정" : "추가";
    BrandModel BrandModel = new BrandModel();

        public void Cancel()
        {
            MudDialog.Cancel();
        }
}